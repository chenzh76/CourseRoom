<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sysu.courseroom"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sysu.courseroom.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
         android:name=".SearchClassroomActivity"
            android:label="SearchClassroom" >
        </activity>
        <activity
         android:name=".SearchLessonActivity"
            android:label="SearchLesson" >
        </activity>
        <activity
         android:name=".ShowClassroomActivity"
            android:label="ShowClassroom" >
        </activity>
        <activity
         android:name=".ShowLessonActivity"
            android:label="ShowLesson" >
        </activity>
        <activity
         android:name=".ShowLessonDetailActivity"
            android:label="ShowLessonDetail" >
        </activity>
    </application>

</manifest>
